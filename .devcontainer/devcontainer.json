{
	"name": "SoccerNet Game State Reconstruction Container",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile"
	},
	"runArgs": [
		"--gpus=all",
		"--shm-size=10g",
		"--network",
		"host"
	],
	"containerEnv": {
		"http_proxy": "${localEnv:http_proxy}",
		"https_proxy": "${localEnv:https_proxy}",
		"no_proxy": "${localEnv:no_proxy}"
	},
	"mounts": [
		"source=/home/li/data,target=/workspaces/${localWorkspaceFolderBasename}/data,type=bind,consistency=cached"
	],
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"postCreateCommand": "git config --global user.email ornot2008@yahoo.com && git config --global user.name ornot-devcontainer && git clone https://github.com/TrackingLaboratory/tracklab ../tracklab && git pull && git -C ../tracklab pull && uv venv --clear --python 3.9 && uv pip install -U -e . && uv run mim install mmcv==2.0.1 && echo 'source /workspaces/sn-gamestate/.venv/bin/activate' >> ~/.bashrc",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-toolsai.jupyter",
				"shd101wyy.markdown-preview-enhanced",
				"yzhang.markdown-all-in-one",
				"bierner.markdown-checkbox",
				"bierner.markdown-mermaid",
				"DavidAnson.vscode-markdownlint",
				"ms-python.vscode-pylance",
				"ms-python.python",
				"ms-python.debugpy",
				"ms-python.vscode-python-envs",
				"marp-team.marp-vscode",
				"ms-python.black-formatter",
				"mhutchie.git-graph",
				"RSIP-Vision.nvidia-smi-plus",
				"ms-azuretools.vscode-containers",
				"ms-toolsai.datawrangler"
			]
		}
	}
}